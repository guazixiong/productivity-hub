<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbad.acl.mapper.AclRoleMapper">

    <resultMap id="AclRoleResultMap" type="com.pbad.acl.domain.po.AclRolePO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, type, status, remark, created_at, updated_at
    </sql>

    <!-- 查询所有角色 -->
    <select id="selectAll" resultMap="AclRoleResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM acl_role
        ORDER BY created_at DESC
    </select>

    <!-- 根据ID查询角色 -->
    <select id="selectById" resultMap="AclRoleResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM acl_role
        WHERE id = #{id}
    </select>

    <!-- 根据名称查询角色 -->
    <select id="selectByName" resultMap="AclRoleResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM acl_role
        WHERE name = #{name}
    </select>

    <!-- 插入角色 -->
    <insert id="insertRole" parameterType="com.pbad.acl.domain.po.AclRolePO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO acl_role (
            name,
            type,
            status,
            remark,
            created_at,
            updated_at
        ) VALUES (
            #{name},
            #{type},
            #{status},
            #{remark},
            IFNULL(#{createdAt}, NOW()),
            IFNULL(#{updatedAt}, NOW())
        )
    </insert>

    <!-- 更新角色 -->
    <update id="updateRole" parameterType="com.pbad.acl.domain.po.AclRolePO">
        UPDATE acl_role
        SET
            name = #{name},
            type = #{type},
            status = #{status},
            remark = #{remark},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除角色 -->
    <delete id="deleteRole">
        DELETE FROM acl_role
        WHERE id = #{id}
    </delete>

    <!-- 检查角色是否被用户占用 -->
    <select id="countUserRoleByRoleId" resultType="int">
        SELECT COUNT(*)
        FROM acl_user_role
        WHERE role_id = #{roleId}
    </select>

</mapper>

