<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pbad.tools.mapper.ToolStatMapper">

    <!-- 通用字段映射 -->
    <resultMap id="ToolStatResultMap" type="com.pbad.tools.domain.po.ToolStatPO">
        <id property="id" column="id"/>
        <result property="toolName" column="tool_name"/>
        <result property="clicks" column="clicks"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 查询所有工具统计（按点击次数降序） -->
    <select id="selectAllOrderByClicks" resultMap="ToolStatResultMap">
        SELECT
            id,
            tool_name,
            clicks,
            created_at,
            updated_at
        FROM
            sys_tool_stat
        ORDER BY
            clicks DESC
    </select>

    <!-- 根据工具ID查询 -->
    <select id="selectById" parameterType="string" resultMap="ToolStatResultMap">
        SELECT
            id,
            tool_name,
            clicks,
            created_at,
            updated_at
        FROM
            sys_tool_stat
        WHERE
            id = #{toolId}
        LIMIT 1
    </select>

    <!-- 插入工具统计 -->
    <insert id="insert" parameterType="com.pbad.tools.domain.po.ToolStatPO">
        INSERT INTO sys_tool_stat (
            id,
            tool_name,
            clicks,
            created_at,
            updated_at
        ) VALUES (
            #{id},
            #{toolName},
            #{clicks},
            NOW(),
            NOW()
        )
    </insert>

    <!-- 更新点击次数（自增1） -->
    <update id="incrementClicks">
        UPDATE sys_tool_stat
        SET clicks = clicks + 1,
            updated_at = NOW()
        WHERE id = #{toolId}
    </update>

    <!-- 批量更新或插入工具统计 -->
    <insert id="batchUpsert" parameterType="java.util.List">
        INSERT INTO sys_tool_stat (
            id,
            tool_name,
            clicks,
            created_at,
            updated_at
        ) VALUES
        <foreach collection="list" item="item" separator=",">
            (
                #{item.id},
                #{item.toolName},
                #{item.clicks},
                NOW(),
                NOW()
            )
        </foreach>
        ON DUPLICATE KEY UPDATE
            tool_name = VALUES(tool_name),
            clicks = VALUES(clicks),
            updated_at = NOW()
    </insert>

</mapper>


