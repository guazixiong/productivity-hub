<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pbad.codegenerator.mapper.DatabaseConfigMapper">

    <resultMap id="DatabaseConfigResultMap" type="com.pbad.codegenerator.domain.po.DatabaseConfigPO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="host" column="host"/>
        <result property="port" column="port"/>
        <result property="database" column="database"/>
        <result property="schema" column="schema"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedBy" column="updated_by"/>
    </resultMap>

    <!-- 查询所有配置 -->
    <select id="selectAll" resultMap="DatabaseConfigResultMap">
        SELECT
            id,
            name,
            type,
            host,
            port,
            `database`,
            `schema`,
            username,
            password,
            created_at,
            updated_at,
            created_by,
            updated_by
        FROM
            code_generator_database_config
        ORDER BY
            created_at DESC
    </select>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="string" resultMap="DatabaseConfigResultMap">
        SELECT
            id,
            name,
            type,
            host,
            port,
            `database`,
            `schema`,
            username,
            password,
            created_at,
            updated_at,
            created_by,
            updated_by
        FROM
            code_generator_database_config
        WHERE
            id = #{id}
    </select>

    <!-- 插入配置 -->
    <insert id="insert" parameterType="com.pbad.codegenerator.domain.po.DatabaseConfigPO">
        INSERT INTO code_generator_database_config (
            id,
            name,
            type,
            host,
            port,
            `database`,
            `schema`,
            username,
            password,
            created_at,
            updated_at,
            created_by,
            updated_by
        ) VALUES (
            #{id},
            #{name},
            #{type},
            #{host},
            #{port},
            #{database},
            #{schema},
            #{username},
            #{password},
            #{createdAt},
            #{updatedAt},
            #{createdBy},
            #{updatedBy}
        )
    </insert>

    <!-- 更新配置 -->
    <update id="update" parameterType="com.pbad.codegenerator.domain.po.DatabaseConfigPO">
        UPDATE code_generator_database_config
        SET
            name = #{name},
            type = #{type},
            host = #{host},
            port = #{port},
            `database` = #{database},
            `schema` = #{schema},
            username = #{username},
            password = #{password},
            updated_at = #{updatedAt},
            updated_by = #{updatedBy}
        WHERE
            id = #{id}
    </update>

    <!-- 删除配置 -->
    <delete id="deleteById" parameterType="string">
        DELETE FROM code_generator_database_config WHERE id = #{id}
    </delete>

</mapper>


