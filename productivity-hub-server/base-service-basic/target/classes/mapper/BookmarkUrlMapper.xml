<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pbad.bookmark.mapper.BookmarkUrlMapper">

    <resultMap id="BookmarkUrlResultMap" type="com.pbad.bookmark.domain.po.BookmarkUrlPO">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="url" column="url"/>
        <result property="iconUrl" column="icon_url"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        title,
        url,
        icon_url,
        description,
        created_at,
        updated_at
    </sql>

    <!-- Base columns with alias for joined queries -->
    <sql id="Base_Column_List_With_Alias">
        u.id,
        u.title,
        u.url,
        u.icon_url,
        u.description,
        u.created_at,
        u.updated_at
    </sql>

    <!-- 查询所有网址 -->
    <select id="selectAll" resultMap="BookmarkUrlResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bookmark_url
        ORDER BY created_at DESC
    </select>

    <!-- 根据ID查询网址 -->
    <select id="selectById" parameterType="string" resultMap="BookmarkUrlResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bookmark_url
        WHERE id = #{id}
        LIMIT 1
    </select>

    <!-- 根据标签ID查询网址列表 -->
    <select id="selectByTagId" parameterType="string" resultMap="BookmarkUrlResultMap">
        SELECT DISTINCT
        <include refid="Base_Column_List_With_Alias"/>
        FROM bookmark_url u
        INNER JOIN bookmark_url_tag ut ON u.id = ut.url_id
        WHERE ut.tag_id = #{tagId}
        ORDER BY u.created_at DESC
    </select>

    <!-- 根据多个标签ID查询网址列表（任一标签匹配） -->
    <select id="selectByTagIds" resultMap="BookmarkUrlResultMap">
        SELECT DISTINCT
        <include refid="Base_Column_List_With_Alias"/>
        FROM bookmark_url u
        WHERE EXISTS (
            SELECT 1
            FROM bookmark_url_tag ut
            WHERE ut.url_id = u.id
              AND ut.tag_id IN
              <foreach collection="tagIds" item="tagId" open="(" close=")" separator=",">
                  #{tagId}
              </foreach>
        )
        ORDER BY u.created_at DESC
    </select>

    <!-- 根据关键词搜索网址（标题或描述） -->
    <select id="searchByKeyword" parameterType="string" resultMap="BookmarkUrlResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM bookmark_url
        WHERE title LIKE CONCAT('%', #{keyword}, '%')
           OR description LIKE CONCAT('%', #{keyword}, '%')
        ORDER BY created_at DESC
    </select>

    <!-- 插入网址，默认时间为当前 -->
    <insert id="insertUrl" parameterType="com.pbad.bookmark.domain.po.BookmarkUrlPO">
        INSERT INTO bookmark_url (
            id,
            title,
            url,
            icon_url,
            description,
            created_at,
            updated_at
        ) VALUES (
            #{id},
            #{title},
            #{url},
            #{iconUrl},
            #{description},
            IFNULL(#{createdAt}, NOW()),
            IFNULL(#{updatedAt}, NOW())
        )
    </insert>

    <!-- 更新网址 -->
    <update id="updateUrl" parameterType="com.pbad.bookmark.domain.po.BookmarkUrlPO">
        UPDATE bookmark_url
        SET
            title = #{title},
            url = #{url},
            icon_url = #{iconUrl},
            description = #{description},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除网址 -->
    <delete id="deleteUrl" parameterType="string">
        DELETE FROM bookmark_url WHERE id = #{id}
    </delete>

    <!-- 批量删除网址 -->
    <delete id="batchDeleteUrls" parameterType="java.util.List">
        DELETE FROM bookmark_url
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>


