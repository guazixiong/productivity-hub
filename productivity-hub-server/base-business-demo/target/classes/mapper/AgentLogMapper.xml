<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbad.agents.mapper.AgentLogMapper">

    <resultMap id="BaseResultMap" type="com.pbad.agents.domain.po.AgentLogPO">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="agent_id" property="agentId" jdbcType="VARCHAR"/>
        <result column="agent_name" property="agentName" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="duration" property="duration" jdbcType="INTEGER"/>
        <result column="input_data" property="inputData" jdbcType="VARCHAR"/>
        <result column="output_data" property="outputData" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, agent_id, agent_name, status, duration, input_data, output_data, created_at
    </sql>

    <!-- 插入日志 -->
    <insert id="insert">
        INSERT INTO sys_agent_log (id, agent_id, agent_name, status, duration, input_data, output_data, created_at)
        VALUES (#{id}, #{agentId}, #{agentName}, #{status}, #{duration}, #{inputData}, #{outputData}, 
                DATE_FORMAT(NOW(), '%Y-%m-%d %H:%i'))
    </insert>

    <!-- 更新日志 -->
    <update id="update">
        UPDATE sys_agent_log
        SET status = #{status},
            duration = #{duration},
            output_data = #{outputData}
        WHERE id = #{id}
    </update>

    <!-- 分页查询日志（按时间倒序） -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_agent_log
        ORDER BY created_at DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 统计日志总数 -->
    <select id="countAll" resultType="long">
        SELECT COUNT(1) FROM sys_agent_log
    </select>

</mapper>

