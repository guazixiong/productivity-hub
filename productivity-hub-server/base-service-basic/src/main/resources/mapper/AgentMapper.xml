<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbad.agents.mapper.AgentMapper">

    <resultMap id="AgentResultMap" type="com.pbad.agents.domain.po.AgentPO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="version" column="version"/>
        <result property="tags" column="tags"/>
        <result property="latencyMs" column="latency_ms"/>
        <result property="owner" column="owner"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, description, version, tags, latency_ms, owner, created_at, updated_at
    </sql>

    <select id="selectAll" resultMap="AgentResultMap">
        select
        <include refid="Base_Column_List"/>
        from agent
        order by created_at desc
    </select>

    <select id="selectById" parameterType="string" resultMap="AgentResultMap">
        select
        <include refid="Base_Column_List"/>
        from agent
        where id = #{id}
        limit 1
    </select>

</mapper>

