<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbad.health.mapper.HealthUserBodyInfoMapper">

    <resultMap id="BaseResultMap" type="com.pbad.health.domain.po.HealthUserBodyInfoPO">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="heightCm" column="height_cm"/>
        <result property="birthDate" column="birth_date"/>
        <result property="gender" column="gender"/>
        <result property="targetWeightKg" column="target_weight_kg"/>
        <result property="resendEmail" column="resend_email"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, height_cm, birth_date, gender, target_weight_kg, resend_email,
        created_at, updated_at
    </sql>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM health_user_body_info
        WHERE user_id = #{userId}
        LIMIT 1
    </select>

    <insert id="insert" parameterType="com.pbad.health.domain.po.HealthUserBodyInfoPO">
        INSERT INTO health_user_body_info (
            id, user_id, height_cm, birth_date, gender, target_weight_kg, resend_email,
            created_at, updated_at
        ) VALUES (
            #{id}, #{userId}, #{heightCm}, #{birthDate}, #{gender}, #{targetWeightKg},
            #{resendEmail},
            IFNULL(#{createdAt}, NOW()), IFNULL(#{updatedAt}, NOW())
        )
    </insert>

    <update id="update" parameterType="com.pbad.health.domain.po.HealthUserBodyInfoPO">
        UPDATE health_user_body_info
        SET
            height_cm = #{heightCm},
            birth_date = #{birthDate},
            gender = #{gender},
            target_weight_kg = #{targetWeightKg},
            resend_email = #{resendEmail},
            updated_at = IFNULL(#{updatedAt}, NOW())
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteByUserId">
        DELETE FROM health_user_body_info
        WHERE user_id = #{userId}
    </delete>

    <select id="selectPDUsers" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM health_user_body_info
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM health_user_body_info
    </select>

</mapper>

