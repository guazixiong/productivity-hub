<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbad.messages.mapper.MessageHistoryMapper">

    <resultMap id="BaseResultMap" type="com.pbad.messages.domain.po.MessageHistoryPO">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="channel" property="channel" jdbcType="VARCHAR"/>
        <result column="request_data" property="requestData" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="response_data" property="responseData" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, channel, request_data, status, response_data, created_at
    </sql>

    <!-- 插入消息历史 -->
    <insert id="insert">
        INSERT INTO sys_message_history (id, channel, request_data, status, response_data, created_at)
        VALUES (#{id}, #{channel}, #{requestData}, #{status}, #{responseData}, DATE_FORMAT(NOW(), '%Y-%m-%d %H:%i'))
    </insert>

    <!-- 分页查询消息历史（按时间倒序） -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_message_history
        ORDER BY created_at DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 统计消息历史总数 -->
    <select id="countAll" resultType="long">
        SELECT COUNT(1) FROM sys_message_history
    </select>

</mapper>

