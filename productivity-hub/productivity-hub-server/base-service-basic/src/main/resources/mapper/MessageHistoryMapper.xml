<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pbad.messages.mapper.MessageHistoryMapper">

    <resultMap id="MessageHistoryResultMap" type="com.pbad.messages.domain.po.MessageHistoryPO">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="channel" column="channel"/>
        <result property="requestData" column="request_data"/>
        <result property="status" column="status"/>
        <result property="responseData" column="response_data"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 分页查询消息历史 -->
    <select id="selectPage" resultMap="MessageHistoryResultMap">
        SELECT
            id,
            user_id,
            channel,
            request_data,
            status,
            response_data,
            created_at
        FROM
            sys_message_history
        WHERE
            user_id = #{userId}
        ORDER BY
            created_at DESC
        LIMIT #{pageSize} OFFSET #{offset}
    </select>

    <!-- 统计总数 -->
    <select id="countAll" resultType="long">
        SELECT
            COUNT(1)
        FROM
            sys_message_history
        WHERE
            user_id = #{userId}
    </select>

    <!-- 插入历史记录 -->
    <insert id="insert" parameterType="com.pbad.messages.domain.po.MessageHistoryPO">
        INSERT INTO sys_message_history (
            id,
            user_id,
            channel,
            request_data,
            status,
            response_data,
            created_at
        ) VALUES (
            #{id},
            #{userId},
            #{channel},
            #{requestData},
            #{status},
            #{responseData},
            #{createdAt}
        )
    </insert>

</mapper>


