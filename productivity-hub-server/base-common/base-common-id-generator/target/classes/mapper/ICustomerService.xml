<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbad.generator.mapper.IdGeneratorMapper">

    <resultMap id="baseResultMap" type="com.pbad.generator.domain.po.IdGeneratorInfoPO">
        <id column="module_key" property="moduleKey"/>
        <result column="module_name" property="moduleName"/>
        <result column="worker_id" property="workerId"/>
        <result column="data_center_id" property="datacenterId"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <sql id="Base_Column_List">
        module_key,module_name,worker_id,data_center_id,remark,status
    </sql>

    <sql id="where">
        <where>
            1 = 1
            <if test="moduleKey != null and moduleKey != ''">
                and module_key = #{moduleKey}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        module_key,module_name,worker_id,data_center_id,remark,status
    </sql>

    <select id="selectByModuleKey" resultMap="baseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM id_generator_info
        <include refid="where"/>
    </select>

</mapper>