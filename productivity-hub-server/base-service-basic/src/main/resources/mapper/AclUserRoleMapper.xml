<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbad.acl.mapper.AclUserRoleMapper">

    <resultMap id="AclUserRoleResultMap" type="com.pbad.acl.domain.po.AclUserRolePO">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, role_id, created_at
    </sql>

    <!-- 根据用户ID查询角色ID列表 -->
    <select id="selectRoleIdsByUserId" resultType="long">
        SELECT role_id
        FROM acl_user_role
        WHERE user_id = #{userId}
        ORDER BY created_at ASC
    </select>

    <!-- 插入用户-角色关联 -->
    <insert id="insertUserRole">
        INSERT INTO acl_user_role (
            user_id,
            role_id,
            created_at
        ) VALUES (
            #{userId},
            #{roleId},
            IFNULL(NOW(), CURRENT_TIMESTAMP)
        )
    </insert>

    <!-- 删除用户下的所有角色关联 -->
    <delete id="deleteUserRoleByUserId">
        DELETE FROM acl_user_role
        WHERE user_id = #{userId}
    </delete>

    <!-- 批量插入用户-角色关联 -->
    <insert id="batchInsertUserRole">
        INSERT INTO acl_user_role (
            user_id,
            role_id,
            created_at
        ) VALUES
        <foreach collection="roleIds" item="roleId" separator=",">
            (#{userId}, #{roleId}, IFNULL(NOW(), CURRENT_TIMESTAMP))
        </foreach>
    </insert>

    <!-- 根据角色ID查询用户ID列表 -->
    <select id="selectUserIdsByRoleId" resultType="string">
        SELECT user_id
        FROM acl_user_role
        WHERE role_id = #{roleId}
        ORDER BY created_at ASC
    </select>

</mapper>

